{
    "version": 2,
    "builds": [
        {
        "src": "app.js",
        "use": "@vercel/node"
        }
    ],
    "routes": [
        {
        "src": "/api/(.*)",
        "dest": "app.js"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret",
        "NODE_ENV": "production",
        "ALLOWED_ORIGINS": "@allowed_origins"
    },
    "regions": ["sin1"],
    "functions": {
        "app.js": {
        "memory": 1024,
        "maxDuration": 10
        }
    }
}