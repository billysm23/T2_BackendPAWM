{
    "version": 2,
    "builds": [
        {
        "src": "./src/app.js",
        "use": "@vercel/node"
        }
    ],
    "routes": [
        {
        "src": "/api/(.*)",
        "dest": "./src/app.js"
        },
        {
        "src": "/(.*)",
        "dest": "./src/app.js"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret",
        "NODE_ENV": "production",
        "ALLOWED_ORIGINS": "@allowed_origins"
    }
}